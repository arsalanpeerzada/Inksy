<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp"
        app:behavior_hideable="false"
        app:behavior_peekHeight="72dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:gravity="center"
            android:text="@string/title"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp" />

        <NumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:theme="@style/MyAppTheme.NumberPicker"
            android:visibility="visible"
            tools:layout_editor_absoluteX="16dp" />

        <EditText
            android:id="@+id/bottomsheet_search"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:background="@drawable/round_border_edittext_search"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:hint="@string/search"
            android:visibility="gone"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="10dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/appBlue"
            app:cardCornerRadius="@dimen/_16sdp"
            app:cardElevation="7dp"
            app:cardUseCompatPadding="true"
            app:rippleColor="@color/appBlue">

            <TextView
                android:id="@+id/tvContinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="55dp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingEnd="55dp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="@color/realwhite" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>